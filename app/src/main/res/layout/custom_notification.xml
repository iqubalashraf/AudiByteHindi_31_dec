<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageViewAlbumArt"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.07"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textAppName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:text="@string/textAppName"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textOpenApp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/textOpenApp"
                android:textColor="@color/tabtoopen"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="9"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <Button
                    android:id="@+id/btnPrevious"
                    android:layout_width="34dp"
                    android:layout_height="32dp"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_action_fast_backward"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <Button
                    android:id="@+id/btnPause"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_action_pause" />

                <Button
                    android:id="@+id/btnPlay"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_action_play" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="34dp"
                    android:layout_height="32dp"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_action_fast_forward" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_action_remove" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>