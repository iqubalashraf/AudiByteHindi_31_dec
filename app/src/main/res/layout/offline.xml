<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:src="@drawable/audibyte"/>
    <TextView
        android:id="@+id/offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/offline"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/offline2"
        android:layout_above="@id/offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It seem's you are offline!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tabToRetry"
        android:layout_below="@id/offline"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:text="@string/tabToRetry"
        android:background="@null"/>
    <ImageButton
        android:id="@+id/tabToRetryButton"
        android:layout_toLeftOf="@id/tabToRetry"
        android:layout_marginRight="10dp"
        android:src="@drawable/tab_to_retry"
        android:layout_below="@id/offline"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="retryToFetch"
        android:background="@null"/>
</RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>